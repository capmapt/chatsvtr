  "keywords": [
    "AI",
    "创投",
    "硅谷科技",
    "SVTR.AI",
    "人工智能投资",
    "创业公司",
    "投资机构"
  ],
  "author": "SVTR.AI",
  "license": "MIT",
  "homepage": "https://svtr.ai",
  "repository": {
    "type": "git",
