{
  "name": "svtr-chatsvtr",
  "version": "1.0.0",
  "description": "SVTR.AI - 硅谷科技评论，专注AI创投领域的社区门户网站",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 3000",
    "preview": "echo '🔍 Starting preview server...' && python3 -m http.server 8080",
    "build": "echo 'Static site, no build required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint assets/js/*.js --ignore-pattern '*backup*'",
    "lint:fix": "eslint assets/js/*.js --fix --ignore-pattern '*backup*'",
    "format": "prettier --write assets/js/*.js assets/css/*.css *.html",
    "validate:html": "html-validate index.html pages/ai-100.html pages/stats-widget.html pages/test-mobile.html",
    "deploy:cloudflare": "./deploy-cloudflare.sh",
    "backup": "git tag backup-$(date +%Y%m%d-%H%M%S)",
    "rollback": "node scripts/rollback.js"
  },
  "keywords": [
    "AI",
    "创投",
    "硅谷科技",
    "SVTR.AI",
    "人工智能投资",
    "创业公司",
    "投资机构"
  ],
  "author": "SVTR.AI",
  "license": "MIT",
  "homepage": "https://svtr.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/capmapt/chatsvtr.git"
  },
  "bugs": {
    "url": "https://github.com/capmapt/chatsvtr/issues"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/dom": "^9.3.3",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "html-validate": "^8.7.4"
  }
}