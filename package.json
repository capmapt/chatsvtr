{
  "name": "svtr-chatsvtr",
  "version": "1.0.0",
  "description": "SVTR.AI - 硅谷科技评论，专注AI创投领域的社区门户网站",
  "main": "index.html",
  "scripts": {
    "start": "node dev-server.js",
    "dev": "node dev-server.js",
    "dev:simple": "node dev-server.js",
    "dev:cloudflare": "wrangler pages dev . --port=3000 --binding AI=@cf/meta/llama-3.1-8b-instruct",
    "dev:static": "python3 -m http.server 3000",
    "preview": "echo '🔍 Starting preview server...' && python3 -m http.server 8080",
    "build": "tsc && echo 'Workers compiled successfully'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:full": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint:old": "eslint assets/js/*.js --ignore-pattern '*backup*' --cache",
    "lint:fix:old": "eslint assets/js/*.js --fix --ignore-pattern '*backup*' --cache",
    "format:old": "prettier --write assets/js/*.js assets/css/*.css *.html pages/*.html",
    "validate:html": "html-validate index.html pages/ai-100.html pages/stats-widget.html",
    "deploy:cloudflare": "./scripts/deploy-cloudflare.sh",
    "deploy:simple": "./scripts/simple-deploy.sh",
    "troubleshoot": "./scripts/simple-deploy.sh troubleshoot",
    "backup": "git tag backup-$(date +%Y%m%d-%H%M%S)",
    "rollback": "node scripts/rollback.js",
    "dev:snapshot": "./scripts/dev-snapshot.sh",
    "dev:rollback": "./scripts/dev-rollback.sh",
    "dev:push": "./scripts/dev-push.sh",
    "dev:start": "./scripts/dev-start.sh",
    "预览": "./scripts/smart-preview.sh",
    "推送": "./scripts/smart-push.sh",
    "回滚": "./scripts/dev-rollback.sh",
    "快照": "./scripts/dev-snapshot.sh",
    "sync": "node scripts/sync-feishu-data.js",
    "sync:weekly": "node scripts/sync-feishu-data.js --weekly-only",
    "sync:trading": "node scripts/sync-feishu-data.js --trading-only",
    "update": "node scripts/manual-update.js",
    "optimize:images": "node scripts/convert-images-webp.js",
    "optimize:assets": "node scripts/minify-assets.js",
    "optimize:gzip": "node scripts/create-gzip-files.js",
    "optimize:all": "npm run optimize:css && npm run optimize:js && npm run optimize:images",
    "optimize:summary": "node scripts/optimization-summary.js",
    "rag:sync": "node scripts/rag-data-sync.js",
    "rag:build": "node scripts/rag-vectorize.js",
    "rag:test": "node scripts/rag-test.js",
    "rag:deploy": "node scripts/deploy-rag.js",
    "rag:setup": "npm run rag:sync && npm run rag:build && npm run rag:test",
    "rag:test-hybrid": "node scripts/test-hybrid-rag.js",
    "chat:test": "npm run rag:test-hybrid",
    "sync:daily": "node scripts/improved-feishu-sync.js svtrai2025",
    "sync:full": "node scripts/improved-feishu-sync.js svtrai2025",
    "sync:webhook": "node scripts/improved-feishu-sync.js svtrai2025",
    "sync:test": "node scripts/improved-feishu-sync.js svtrai2025",
    "build:modular": "node scripts/build-modular.js",
    "config:validate": "node scripts/validate-config.js",
    "config:sync": "node scripts/update-config.js",
    "clean:temp": "rm -rf .wrangler/tmp/* && rm -rf assets/**/*.backup",
    "lint": "eslint assets/js/**/*.js --fix",
    "lint:check": "eslint assets/js/**/*.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "npx playwright install",
    "deploy": "./scripts/deploy-production.sh",
    "deploy:rollback": "./scripts/deploy-production.sh rollback",
    "deploy:status": "wrangler pages deployment list --project-name=chatsvtr"
  },
  "keywords": [
    "AI",
    "创投",
    "硅谷科技",
    "SVTR.AI",
    "人工智能投资",
    "创业公司",
    "投资机构"
  ],
  "author": "SVTR.AI",
  "license": "MIT",
  "homepage": "https://svtr.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/capmapt/chatsvtr.git"
  },
  "bugs": {
    "url": "https://github.com/capmapt/chatsvtr/issues"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@cloudflare/workers-types": "^4.20250722.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.9",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.57.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "html-validate": "^8.7.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "terser": "^5.43.1",
    "typescript": "^5.3.0",
    "vitest": "^2.1.9",
    "wrangler": "^4.26.0"
  },
  "dependencies": {
    "dotenv": "^17.2.0"
  }
}
