{
  "name": "svtr-chatsvtr",
  "version": "1.0.0",
  "description": "SVTR.AI - 硅谷科技评论，专注AI创投领域的社区门户网站",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "npx wrangler pages dev . --port=3000 --binding AI=@cf/meta/llama-3.1-8b-instruct",
    "dev:static": "python3 -m http.server 3000",
    "preview": "echo '🔍 Starting preview server...' && python3 -m http.server 8080",
    "build": "tsc && echo 'Workers compiled successfully'",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:full": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint assets/js/*.js --ignore-pattern '*backup*' --cache",
    "lint:fix": "eslint assets/js/*.js --fix --ignore-pattern '*backup*' --cache",
    "format": "prettier --write assets/js/*.js assets/css/*.css *.html pages/*.html",
    "validate:html": "html-validate index.html pages/ai-100.html pages/stats-widget.html",
    "deploy:cloudflare": "./scripts/deploy-cloudflare.sh",
    "backup": "git tag backup-$(date +%Y%m%d-%H%M%S)",
    "rollback": "node scripts/rollback.js",
    "dev:snapshot": "./scripts/dev-snapshot.sh",
    "dev:rollback": "./scripts/dev-rollback.sh",
    "dev:push": "./scripts/dev-push.sh",
    "dev:start": "./scripts/dev-start.sh",
    "预览": "./scripts/smart-preview.sh",
    "推送": "./scripts/smart-push.sh",
    "回滚": "./scripts/dev-rollback.sh",
    "快照": "./scripts/dev-snapshot.sh",
    "sync": "node scripts/smart-sync-strategy.js",
    "sync:smart": "node scripts/smart-sync-strategy.js",
    "sync:complete": "node scripts/complete-sync-manager.js",
    "sync:enhanced": "node scripts/enhanced-feishu-sync-v2.js",
    "update": "node scripts/smart-sync-strategy.js",
    "optimize:images": "node scripts/convert-images-webp.js",
    "optimize:assets": "node scripts/minify-assets.js",
    "optimize:gzip": "node scripts/create-gzip-files.js",
    "optimize:all": "npm run optimize:images && npm run optimize:assets && npm run optimize:gzip",
    "optimize:summary": "node scripts/optimization-summary.js",
    "rag:sync": "node scripts/smart-sync-strategy.js",
    "rag:build": "node scripts/rag-vectorize.js",
    "rag:test": "node scripts/rag-test.js",
    "rag:deploy": "node scripts/deploy-rag.js",
    "rag:setup": "npm run rag:sync && npm run rag:build && npm run rag:test",
    "rag:test-hybrid": "node scripts/test-hybrid-rag.js",
    "chat:test": "npm run rag:test-hybrid",
    "scan:data-quality": "node scripts/data-quality-scanner.js",
    "fix:data-gaps": "node scripts/data-gap-fixer.js",
    "optimize:streaming": "node scripts/streaming-display-optimizer.js",
    "update:dynamic": "node scripts/dynamic-data-updater.js",
    "test:contact": "node scripts/test-contact-guidance.js",
    "sync:daily": "node scripts/complete-sync-manager.js",
    "sync:full": "node scripts/complete-sync-manager.js",
    "sync:webhook": "node scripts/complete-sync-manager.js",
    "sync:test": "node scripts/quick-sync-test.js",
    "sync:verify": "node scripts/quick-sync-test.js",
    "sync:trading": "node scripts/sync-trading-picks-only.js",
    "sync:trading:web": "node scripts/convert-trading-picks-for-web.js",
    "sync:trading:full": "node scripts/sync-trading-picks-only.js && node scripts/convert-trading-picks-for-web.js",
    "test:trading": "node scripts/test-trading-page-integration.js",
    "sync:schedule": "node scripts/auto-sync-scheduler.js",
    "sync:monitor": "node scripts/sync-monitor.js",
    "sync:auto:start": "node scripts/auto-sync-scheduler.js start",
    "sync:auto:stop": "node scripts/auto-sync-scheduler.js stop",
    "sync:auto:status": "node scripts/auto-sync-scheduler.js status",
    "sync:auto:trigger": "node scripts/auto-sync-scheduler.js trigger",
    "sync:auto:restart": "node scripts/auto-sync-scheduler.js restart",
    "sync:health": "node scripts/sync-monitor.js",
    "sync:real": "node scripts/real-content-sync.js",
    "test:permissions": "node scripts/test-api-permissions.js",
    "test:content": "node scripts/test-content-access.js",
    "test:websearch": "node scripts/test-web-search-integration.js",
    "test:analysis": "node scripts/test-company-analysis-format.js"
