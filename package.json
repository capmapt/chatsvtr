    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.55.0",
    "html-validate": "^8.7.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "sharp": "^0.34.3",
    "terser": "^5.43.1",
    "typescript": "^5.3.0",
    "wrangler": "^4.28.1"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
