{
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-inline-style": "off",
    "require-sri": "off",
    "no-trailing-whitespace": "error",
    "void-content": "error",
    "void-style": "error",
    "no-unknown-elements": "error",
    "element-required-attributes": "error",
    "attribute-boolean-style": "error",
    "doctype-html": "error",
    "lang-attribute": "error",
    "meta-charset": "error",
    "meta-viewport": "error"
  },
  "elements": [
    "html5"
  ]
}